<h1>NEW Question</h1>

<%= form_for :question, url: questions_path do |f| %>
<% if @question.errors.any? %>
<div id="error_explanation">
  <h2>ERROR! You may not submit the following question until the following
  is up to par:</h2>
    <ul>
      <% @question.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>

  <%= link_to 'Back', questions_path %>
